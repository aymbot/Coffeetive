<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation.xml"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.coffeetive.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/home_fragment" >
        <action
            android:id="@+id/action_homeFragment_to_statisticsFragment"
            app:destination="@id/statisticsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_coffeeRegistrationFragment"
            app:destination="@id/coffeeRegistrationFragment" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.example.coffeetive.AboutFragment"
        android:label="AboutFragment"
        tools:layout="@layout/about_fragment">
        <action
            android:id="@+id/action_aboutFragment_to_homeFragment"
            app:destination="@id/homeFragment"/>
    </fragment>
    <fragment
        android:id="@+id/coffeeRegistrationFragment"
        android:name="com.example.coffeetive.CoffeeRegistrationFragment"
        android:label="coffeeRegistrationFragment"
        tools:layout="@layout/coffee_registration_fragment">
        <action
            android:id="@+id/action_coffeeRegistrationFragment_to_homeFragment"
            app:destination="@id/homeFragment"/>
    </fragment>
    <fragment
        android:id="@+id/statisticsFragment"
        android:name="com.example.coffeetive.StatisticsFragment"
        android:label="statisticsFragment"
        tools:layout="@layout/statistics_fragment">
        <action
            android:id="@+id/action_statisticsFragment_to_homeFragment"
            app:destination="@id/homeFragment"/>
    </fragment>
</navigation>